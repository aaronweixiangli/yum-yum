<%- include('../partials/header') %>

    <main id="review-main">
        <% if (restaurant) { %>
            <form id="add-review-form" method="POST" action="/restaurants/<%= restaurant.id %>/reviews">
                <h1>
                    <%= restaurant.name %>
                </h1>
                <div>
                    <div id="rating-select">
                        <label>Rating:</label>
                        <select name="rating">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5" selected>5</option>
                        </select>
                    </div><br>
                    <div>
                        <textarea id="review-content" name="content" placeholder="Write your review here"></textarea>
                    </div>
                </div>
                <input type="submit" value="Post Review" id="submit-review">
            </form>
            <% } else { %>
                <h1>Sorry, the post review page could not be found</h1>
                <p>
                    <%= error %>
                </p>
                <% } %>
    </main>


    <%- include('../partials/footer') %>