<%- include('../partials/header') %>

<main id="review-main">
    <form id="add-review-form" method="POST"
        action="/restaurants/<%= id %>/reviews">
        <div>
            <div id="rating-select">
                <label>Rating:</label>
                <select name="rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5" selected>5</option>
                </select>
            </div><br>
            <div>
                <textarea id="review-content" name="content" placeholder="Write your review here"></textarea>
            </div>
        </div>
        <input type="submit" value="Post Review" id="submit-review">
    </form>
</main>


<%- include('../partials/footer') %>